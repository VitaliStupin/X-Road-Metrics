# Default cronjob for OpMon reports module
# Runs opmon-reports report generation monthly.
# Uses default reports settings file /etc/opmon/reports/settings.yaml

SHELL=/bin/bash
PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

# m   h  dom mon dow  user     command
  1   0   10  *   *   opmon    opmon-reports report
